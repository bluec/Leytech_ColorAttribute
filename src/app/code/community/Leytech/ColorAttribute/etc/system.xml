<config>
    <sections>
        <leytech_colorattribute translate="label" module="leytech_ordershare">
            <label>Leytech: Color Picker Attribute</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <about translate="label">
                    <label>About</label>
                    <sort_order>10</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <comment>
                        <![CDATA[
                        <h3>Leytech Color Picker Attribute Extension</h3>
                        <p>This extension allows you to create color picker product attributes by adding a new input type to the attribute creation form.</p>
                        ]]>
                    </comment>
                </about>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <color_picker translate="label">
                            <label>Color picker</label>
                            <comment>Select the type of color picker to use</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>leytech_colorattribute/system_config_source_colorpicker</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </color_picker>
                    </fields>
                </settings>
            </groups>
        </leytech_colorattribute>
    </sections>
</config>
